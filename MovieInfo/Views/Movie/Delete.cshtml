@model Movie

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Movie</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Director" class="p-0"></label>
            <input asp-for="Director" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Review" class="p-0"></label>
            <input asp-for="Review" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to Movie List
                </a>
            </div>
        </div>
    </div>
</form>
