@model List<Movie>

<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-9">
                <h2 class="text-primary">
                    Movie List
                </h2>
            </div>
            <div class="col-3">
                <a asp-controller="Movie" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i>   Create New Movie
                </a>
            </div>

        </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
          <button type="button" class="btn btn-info">Title</button>
        </th>
        <th>
          <button type="button" class="btn btn-info">Director</button>
        </th>
        <th>
          <button type="button" class="btn btn-info">Review</button>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(t=>t.Title))
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Director</td>
                <td>@obj.Review</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>